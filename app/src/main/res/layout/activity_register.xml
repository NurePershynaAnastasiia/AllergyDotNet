<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_register_login"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#F8F1F4"
        android:drawablePadding="20dp"
        android:hint="Ім'я Прізвище"
        android:padding="20dp"
        android:textColor="#27353C"
        android:textColorHint="#8FA2AB"
        android:fontFamily="@font/gilroy_medium"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#F8F1F4"
        android:drawablePadding="20dp"
        android:fontFamily="@font/gilroy_medium"
        android:hint="Адреса електронної пошти"
        android:padding="20dp"
        android:textColor="#27353C"
        android:textColorHint="#8FA2AB" />
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:background="#F8F1F4"
        android:hint="Пароль"
        android:textColorHint="#8FA2AB"
        android:textColor="#27353C"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        android:fontFamily="@font/gilroy_medium"/>
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repassword"
        android:layout_below="@id/password"
        android:background="#F8F1F4"
        android:hint="Повторити пароль"
        android:textColorHint="#8FA2AB"
        android:textColor="#27353C"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawablePadding="20dp"
        android:inputType="textPassword"
        android:fontFamily="@font/gilroy_medium"/>
    />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signupbtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/repassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#275362"
        app:cornerRadius="10dp"
        android:text="Створити акаунт"
        android:textSize="25dp"
        android:fontFamily="@font/gilroy_semibold"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уже маєте акаунт? Увійти"
        android:layout_marginBottom="20dp"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/gilroy_regular"
        android:textColor="#023C16"/>

</RelativeLayout>
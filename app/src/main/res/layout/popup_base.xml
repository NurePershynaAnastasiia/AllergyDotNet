<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A6A6A">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/popup_background"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/gilroy_heavy"
            android:text="Дякуємо що обрали стандартну підписку!"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textAlignment="gravity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:autoSizeTextType="uniform"
            android:gravity="left|center"
            android:text="Стандартна підписка є безкоштовною та не
             містить у собі повний функціонал додатку.
             Ви можете змінити тип підписки у будь-який час."
            android:fontFamily="@font/gilroy_regular"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/Gotit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/popup_button"
            android:padding="15dp"
            android:text="На головну"
            android:textAlignment="center"
            android:fontFamily="@font/gilroy_regular"
            android:textColor="@color/black"/>

    </LinearLayout>
</RelativeLayout>
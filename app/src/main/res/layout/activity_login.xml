<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_register_login"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#F8F1F4"
        android:drawablePadding="20dp"
        android:fontFamily="@font/gilroy_medium"
        android:hint="Адреса електронної пошти"
        android:padding="20dp"
        android:textColor="#27353C"
        android:textColorHint="#8FA2AB" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_margin="10dp"
        android:background="#F8F1F4"
        android:drawablePadding="20dp"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:fontFamily="@font/gilroy_medium"
        android:padding="20dp"
        android:textColor="#27353C"
        android:textColorHint="#8FA2AB" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signupbtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#275362"
        android:text="Увійти"
        app:cornerRadius="10dp"
        android:fontFamily="@font/gilroy_semibold"
        android:textSize="25dp"
        />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Вперше з нами? Створити новий акаунт"
        android:textSize="20dp"
        android:fontFamily="@font/gilroy_regular"
        android:textColor="#023C16"/>

</RelativeLayout>